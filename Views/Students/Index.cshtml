@model Project.ViewModels.StudentFullNameStudentIdViewModel

@{ ViewData["Title"] = "Index"; }

<h1>Students</h1>

<p>
    <a asp-action="Create">Add New Student</a>
</p>
<form asp-controller="Students" asp-action="Index" method="get">
    <p>
        Full Name: <input type="text" asp-for="SearchString" />
        StudentID: <input type="text" asp-for="StudentIndexSearch" />



        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Students[0].ProfilePicture)</th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].EnrollmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].AcquiredCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].CurrentSemestar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].EducationLevel)
            </th>
            <th> @Html.DisplayNameFor(model => model.Students[0].Courses) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Students)
        {
<tr>

    <td>
        @{ if (item.ProfilePicture != null)
            {
<img src="~/images/@item.ProfilePicture"
     class="img-thumbnail shadow-lg"
     height="40" width="70"
     asp-append-version="true" />} }
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.StudentId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FullName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EnrollmentDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AcquiredCredits)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CurrentSemestar)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EducationLevel)
    </td>
    <td>
        @foreach (var course in item.Courses)
        {

<a>
    @Html.DisplayFor(modelItem => course.Course.Title)
</a> <br />                }


    </td>
    <td>
        <a asp-action="MyCourses" asp-route-id="@item.Id">View Courses</a> |
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>}
    </tbody>
</table>
